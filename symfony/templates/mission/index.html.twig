{% extends 'base.html.twig' %}

{% block title %}Hello MissionController!{% endblock %}

{% block body %}

<header>
    <div class="container mb-3 py-4">
        <div class="row">
            <div class="col text-center text-md-left">
                <img src="{{ asset('images/Emblema_KGB.svg') }}" alt="KGB" height="160" />
            </div>
            <div class="col text-center text-md-right">
                <h1>КГБ, Комитет государственной безопасности</h1>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="float-left">
                <div class="row">
                    <div class="col pr-1">
                        <select class="form-control mt-2" id="statusFilter">
                            <option value="">Status</option>
                            {% for key, stat in status %}
                                <option value="{{ key }}">{{ stat }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col px-1">
                        <select class="form-control mt-2" id="countryFilter">
                            <option value="">Country</option>
                            {% for key, country in countries %}
                                <option value="{{ key }}">{{ country }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col px-1">
                        <select class="form-control mt-2" id="typeFilter">
                            <option value="">Type</option>
                            {% for type in types %}
                                <option value="{{ type.idMissionType }}">{{ type.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>

            <table
                    id="missionstable"
                    data-toolbar="#toolbar"
                    data-search="true"
                    data-show-columns="true"
                    data-show-columns-toggle-all="true"
                    data-detail-formatter="detailFormatter"
                    data-pagination="true"
                    data-id-field="id"
                    data-page-list="[10, 25, 50, 100, all]"
                    data-show-footer="false"
                    data-side-pagination="server"
                    data-url="mission/get-missions"
                    data-search-highlight="true"
                    data-query-params="queryParams"
                    data-response-handler="responseHandler"
                    class="table table-light">
            </table>
        </div>
    </div>
</div>

<footer class="bg-secondary py-5 mt-3">
    <div class="row">
        <div class="col text-center">
            <a href="{{ path('admin') }}" class="btn btn-light">
                <i class="fas fa-user-lock"></i> Administration</a>
        </div>
    </div>
</footer>

{% include  'mission/details.html.twig' %}

<script src="{{ asset('js/missions.js') }}"></script>

{% endblock %}
